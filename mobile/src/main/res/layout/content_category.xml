<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >
    <ImageView
        android:id="@+id/recycler_view_empty_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_empty"
        android:layout_centerInParent = "true"
       />
    <TextView
        android:id="@+id/recycler_view_empty_text"
        android:text="@string/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity = "center"
        android:layout_centerInParent = "true"
        android:layout_below="@+id/recycler_view_empty_icon"
        />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.abhilash.newsforyou.UI.CategoryActivity"
    tools:showIn="@layout/activity_category"
    android:id="@+id/category_fragment"
    android:orientation="vertical">

</LinearLayout>
</RelativeLayout>
